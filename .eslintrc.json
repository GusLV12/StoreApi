{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["warn", "always"],
    "no-unused-vars": ["warn"],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always",
        "json": "always",
        "jsx": "never"
      }
    ]
  }
}
