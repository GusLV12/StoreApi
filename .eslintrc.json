{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["standard", "plugin:import/recommended"],
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["warn", "always"],
    "no-unused-vars": ["warn"],
    "import/extensions": [
      "error",
      "always",
      {
        "js": "always",
        "json": "always",
        "jsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".json"]
      }
    }
  }
}
